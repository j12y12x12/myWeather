/* components/more_service.wxss */
.service-container {
  display: flex;
  flex-direction: column;
  margin: 0px 20px;
  margin-bottom: 30px;
}

.service-title {
font-size: 20px;
font-weight: 500;
color: #111e36;
margin-bottom: 10px;
margin-top: 10px;

}
.buttons-content {
  display: flex;
  flex-direction: row;
  gap: 15px;
  justify-content: flex-start;
  align-items: flex-start;      /* 垂直方向上对齐到顶部 */
  width: 200px;
}

.button-item {
  padding: 10px;
  font-size: 16px;
  border-radius: 5px;
  background-color: #e5e5e5;
  color: #111e36;
  max-width: 100px;
}